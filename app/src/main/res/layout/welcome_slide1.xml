<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_loisir"
        android:background="#FFF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/bleuCiel"
        android:src="@drawable/ic_float"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/desc_loisir"
        android:layout_below="@+id/icon_loisir"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Cet icon désigne le bassin loisir de la piscine."/>
    <ImageView
        android:id="@+id/icon_patauge"
        android:layout_below="@+id/desc_loisir"
        android:background="#FFF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/bleuCiel"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_crawling_baby_silhouette"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/desc_patauge"
        android:layout_below="@+id/icon_patauge"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Cet icon désigne la pataugeoire de la piscine."/>
    <ImageView
        android:id="@+id/icon_sport"
        android:layout_below="@+id/desc_patauge"
        android:background="#FFF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_swimming_silhouette"
        android:backgroundTint="@color/bleuCiel"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/icon_sport"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cet icon désigne le bassin sportif de la piscine."/>
</RelativeLayout>